<?xml version="1.0"?>
<package>
	<metadata>
		<id>
			{{ params.id }}
		</id>
		<version>
			{{ params.version }}
		</version>
		<description>
			{{ params.description }}
		</description>
		<tags>
			{{ params.tags }}
		</tags>
		<authors>
			{{ params.authors}}
		</authors>
	</metadata>
	<files>
		<file src="include\**\*.*" target="build\native\include" />

		{% for msvc in params.compilers -%}
		{% for arch in params.architectures -%}
		<file src="{{ arch }}\{{ msvc }}\lib\**\opencv_world*.lib" target="build\native\{{ arch }}\{{ msvc }}.0\lib" />
		<file src="{{ arch }}\{{ msvc }}\bin\**\opencv_world*.dll" target="build\native\{{ arch }}\{{ msvc }}.0\bin" />
		<file src="{{ arch }}\{{ msvc }}\bin\**\opencv_world*.pdb" target="build\native\{{ arch }}\{{ msvc }}.0\bin" />

		{% endfor -%}
		{% endfor -%}
		<file src="README.md" target="build\native" />
		<file src="OpenCVNuget.targets" target="build\native" />
	</files>
</package>
